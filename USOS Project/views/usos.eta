<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= it.title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <img src="/logo.png" alt="Logo" style="max-height: 40px; padding-right: 10px">
            <a class="navbar-brand" href="/usos">USOS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link active" href="/">Dziekanat</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Studia stacjonarne</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Studia niestacjonarne</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Pracownicy</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <h1 class="text-center">USOS - System ocen</h1>

        <div class="row mt-4">
            <% it.students.forEach(student => { %>
                <div class="col-md-4">
                    <div class="card mb-3" data-student-id="<%= student.id %>">
                        <img src="/uploads/<%= student.zdjecie %>" class="card-img-top img-fluid" alt="Zdjęcie <%= student.imie %>" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title"><%= student.imie %> <%= student.nazwisko %></h5>
                            <p>Oceny:</p>
                            <ul class="list-group list-group-flush oceny-list">
                                <% if (student.oceny.length === 0) { %>
                                    <li class="list-group-item text-muted">Brak ocen</li>
                                <% } else { %>
                                    <% student.oceny.forEach((ocena, index) => { %>
                                        <li data-grade-index="<%= index %>" 
                                            data-przedmiot="<%= ocena.przedmiot %>" 
                                            class="list-group-item grade-slot">
                                            <%= ocena.przedmiot %>: <%= ocena.ocena %>
                                        </li>
                                    <% }) %>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <div class="card mb-4 p-3" id="grade-scale">
            <h5>Skala ocen</h5>
            <div class="d-flex gap-2 flex-wrap">
                <% const grades = [2, 3, 3.5, 4, 4.5, 5]; %>
                <% for (let i = 0; i < grades.length; i++) { %>
                    <% const val = grades[i]; %>
                    <div class="badge bg-secondary grade-item" draggable="true" data-grade="<%= val %>">
                        <%= val %>
                    </div>
                <% } %>
            </div>
        </div>
        <p><a href="/">Dodaj nowego studenta</a></p>

        <div id="komunikat" class="alert mt-3 d-none"></div>

    </main>

    <div class="modal fade" id="editGradeModal" tabindex="-1" aria-labelledby="editGradeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <form id="editGradeForm" class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editGradeModalLabel">Edytuj ocenę</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="studentId" id="editStudentId">
                    <input type="hidden" name="gradeIndex" id="editGradeIndex">
                    <div class="mb-3">
                        <label for="editPrzedmiot" class="form-label">Przedmiot</label>
                        <input type="text" class="form-control" id="editPrzedmiot" name="przedmiot" required>
                    </div>
                    <div class="mb-3">
                        <label for="editOcena" class="form-label">Ocena</label>
                        <input type="number" class="form-control" id="editOcena" name="ocena" step="0.5" min="2" max="5" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                </div>
            </form>
        </div>
    </div>

    <footer class="footer mt-5 py-3 bg-light text-center">
        <div class="container">
            <a href="mailto:your.email.address">Adres email</a>
        </div>
    </footer>

    <% if (it.customScript) { %>
        <script src="<%= it.customScript %>"></script>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/usos.js" defer></script>
</body>
</html>